{
    "name": "mbarquin/slim-dynamic-routing",
    "description": "A factory object to instance and configure Slim Framework in order to use dynamic routing",
    "keywords": ["microframework","rest","router","dynamic","php","slim"],
    "homepage": "http://github.com/mbarquin/slim-dinamic-routing",
    "license": "MIT",
    "authors": [
        {
            "name": "Moisés Barquín Salgado",
            "email": "moises.barquin@gmail.com",
            "homepage": "http://www.mercenariophp.com/"
        }
    ],
    "require": {
        "php": "^7.0",
        "slim/slim": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "5.3.*",
        "phpmetrics/phpmetrics" : "^1.10",
        "phpmetrics/composer-extension": "dev-master"
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "autoload": {
        "psr-4": { "mbarquin\\SlimDR\\": "src/SlimDR/" }
    }
}
